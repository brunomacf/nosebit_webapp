.main-section
    text-align: center;
    padding: 60pt 20pt;

    h1,h3
        margin: 0;
    
    h3
        margin-top: 20pt;

.feature-box
    padding: 30pt 20pt;
    background: #f5f5f5;
    
    .header
        text-align: center;
        margin-bottom: 10pt;
        
        .icon
            color: #22A7F0;
            font-size: 3em;
            line-height: 1;
            
        .title
            margin: 20pt 0;

.workflow-section
    padding: 20pt 20pt 40pt 20pt;
    //background: #f5f5f5;
    
    //.content
    //    max-width: 400pt;
    //    width: 100%;
    //    margin: 0 auto;

    .title
        text-align: center;
    
    ul
        list-style: none;
        padding: 0;
        margin: 0;
        
        li
            //border: 1pt solid #f5f5f5;
            padding: 10pt;
            display: table;
            width: 100%;
            
            > div
                display: table-cell;
                vertical-align: middle;
                
            > .icon
                color: #F9690E;
                font-size: 3em;
                padding-right: 10pt;
                width: 1%;

.about-section
    .title
        text-align: center;
        
    .team-member
        width: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
        
        .overlay
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.3);

        .info-box
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 15pt;
            color: white;
            
            .name
                font-size: 1.3em;
                text-align: right;
                //font-weight: 500;
            .position
                font-size: 0.8em;
                text-align: right;

    .team-member:after
        content: "";
        display: block;
        padding-bottom: 100%;

.footer
    .content
        padding: 40pt 20pt;
        border-top: 1pt solid #eee;
    